@{
    ViewData["Title"] = "Welcome to RepVault";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold">Track. Transform. Triumph.</h1>
        <p class="lead mt-3">RepVault is your all-in-one fitness log — from strength sets to cardio strides.</p>
        <a class="btn btn-primary btn-lg mt-4" asp-area="" asp-controller="Account" asp-action="Register">Join the Vault</a>
    </div>
</section>

<section class="features py-5 bg-gradient">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <i class="bi bi-bar-chart-line fs-1 text-primary"></i>
                <h4 class="mt-3">Progress Charts</h4>
                <p>Visualize your gains and monitor your goals over time with clean, dynamic charts.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="bi bi-heart-pulse fs-1 text-danger"></i>
                <h4 class="mt-3">Cardio Logging</h4>
                <p>Track your runs, rides, and rows — distance, duration, and heart-pumping intensity.</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="bi bi-moon-stars fs-1 text-warning"></i>
                <h4 class="mt-3">Dark Mode</h4>
                <p>Seamlessly toggle themes for comfort — RepVault supports your grind day or night.</p>
            </div>
        </div>
    </div>
</section>

<section class="cta text-center py-5">
    <div class="container">
        <h2 class="mb-4">Ready to Level Up?</h2>
        <a class="btn btn-outline-light btn-lg" asp-controller="Account" asp-action="Register">Create Your Free Account</a>
    </div>
</section>
