@using Microsoft.AspNetCore.Identity
@using RepVault.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RepVault</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#121212" />
</head>
<body class="dark-mode d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/img/repvault-icon.png" alt="RepVault Logo" width="32" height="32" class="me-2" />
                    <strong>RepVault</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="logDropdown" role="button" data-bs-toggle="dropdown">Log Workout</a>
                                <ul class="dropdown-menu" aria-labelledby="logDropdown">
                                    <li><a class="dropdown-item" asp-controller="RepVaultWorkout" asp-action="Log">Strength Workout</a></li>
                                    <li><a class="dropdown-item" asp-controller="RepVaultWorkout" asp-action="LogCardio">Cardio Workout</a></li>
                                </ul>
                            </li>
                            <li class="nav-item"><a class="nav-link" asp-controller="RepVaultWorkout" asp-action="Progress">Progress</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="RepVaultGoals" asp-action="Index">Goals</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="RepVaultWorkout" asp-action="History">History</a></li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><span class="dropdown-item">@UserManager.GetUserName(User)</span></li>
                                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Profile</a></li>
                                    <li>
                                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="dropdown-item">
                                            <button type="submit" class="btn btn-link p-0 text-start">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Sign Up</a></li>
                        }
                        <li class="nav-item">
                            <button class="btn btn-sm btn-outline-light ms-2" id="toggleDark"><i class="bi bi-moon-fill"></i></button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3 flex-grow-1">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-dark text-center text-white py-3 mt-auto">
        <div class="container">
            <small>&copy; @DateTime.Now.Year RepVault · Built for strength & discipline</small>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
