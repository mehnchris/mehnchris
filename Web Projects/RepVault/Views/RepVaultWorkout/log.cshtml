@model RepVault.Models.RepVaultWorkout
@{
    ViewData["Title"] = "Log Workout";
}

<h2>Log a Workout</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<form asp-action="Log" method="post">
    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" type="date"
               value="@Model.Date.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ExerciseName" class="form-label"></label>
        <input asp-for="ExerciseName" class="form-control" />
        <span asp-validation-for="ExerciseName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Sets" class="form-label"></label>
        <input asp-for="Sets" class="form-control" />
        <span asp-validation-for="Sets" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Reps" class="form-label"></label>
        <input asp-for="Reps" class="form-control" />
        <span asp-validation-for="Reps" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MuscleGroup" class="form-label"></label>
        <input asp-for="MuscleGroup" class="form-control" />
        <span asp-validation-for="MuscleGroup" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input asp-for="IsCustomExercise" class="form-check-input" />
        <label asp-for="IsCustomExercise" class="form-check-label">Custom Exercise</label>
        <span asp-validation-for="IsCustomExercise" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@if (TempData["WorkoutSuggestion"] != null)
{
    <div class="alert alert-warning">
        Did you mean: <strong>@TempData["WorkoutSuggestion"]</strong>? 
        We’ll treat it as the same for tracking purposes.
    </div>
}
