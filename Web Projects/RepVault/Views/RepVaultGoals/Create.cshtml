@model RepVault.Models.RepVaultGoal
@{
    ViewData["Title"] = "Set a Goal";
}

<h2>Enter a Fitness Goal you would like to accomplish and let's  attack it! </h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="GoalTitle" class="form-label"></label>
        <input asp-for="GoalTitle" class="form-control" />
        <span asp-validation-for="GoalTitle" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="TargetValue" class="form-label"></label>
        <input asp-for="TargetValue" class="form-control" />
        <span asp-validation-for="TargetValue" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Unit" class="form-label"></label>
        <input asp-for="Unit" class="form-control" />
        <span asp-validation-for="Unit" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TargetDate" class="form-label"></label>
        <input asp-for="TargetDate" class="form-control" type="date" />
        <span asp-validation-for="TargetDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Goal</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
